apiVersion: apps/v1
kind: Deployment
metadata:
  name: http-frontend
  labels:
    app: http-frontend
spec:
  selector:
    matchLabels:
      app: http-frontend
  template:
    metadata:
      labels:
        app: http-frontend
    spec:
      containers:
        - name: http-frontend-app
          image: zooniverse/http-frontend:__IMAGE_TAG__
          resources:
              requests:
                memory: "50Mi"
                cpu: "10m"
              limits:
                memory: "50Mi"
                cpu: "500m"
          livenessProbe:
             httpGet:
               path: /
               port: 80
               httpHeaders:
               - name: Host
                 value: liveness-probe
          readinessProbe:
             httpGet:
               path: /
               port: 80
               httpHeaders:
               - name: Host
                 value: liveness-probe
          ports:
            - containerPort: 80
          env:
            - name: LOG_STDOUT
              value: true
---
apiVersion: autoscaling/v1
kind: HorizontalPodAutoscaler
metadata:
  name: http-frontend-app
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: http-frontend
  minReplicas: 2
  maxReplicas: 6
  targetCPUUtilizationPercentage: 80
---
apiVersion: v1
kind: Service
metadata:
  name: http-frontend
spec:
  selector:
    app: http-frontend
  ports:
    - protocol: TCP
      port: 80
      targetPort: 80
  type: NodePort
